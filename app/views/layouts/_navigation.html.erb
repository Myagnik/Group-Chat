<%= link_to "Chatroom", root_path, class: "item" %>

  <% if logged_in? %>
 <%= link_to "Private Messages", privatemessage_path, class: "item" %>
  <%end%>



<div class="right menu">  

  <div class="ui dropdown item">
    Account <i class="dropdown icon"></i>
    <div class="menu">
      <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
        <%= link_to "Account setting", accountsetting_path, class: "item" %>
      <% else %>
        <%= link_to "Log in", login_path, class: "item" %>
      <% end %>
    </div>
  
  </div>
  <% if !logged_in? %>
    <div class="item">
      <%= link_to "Log in", login_path, class: "ui primary button" %>
    </div>
    <div class="item">
      <%= link_to "Sign up!", signup_path, class: "ui small primary button" %>
      </div>
  <% end %>


</div>