<div class="container">
  <div class="row justify-content-center">
  <h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
       sign up
   </h4>
   <div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "ui form", local: true) do |f| %>
        <div class="form-group row">
         <div class="field">
          <%= f.label :username, class: "ui form" %>
          <div class="ui left icon input">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            <i class="user icon"></i>
            </div>
          </div>
        </div>

        <div class="form-group row">
                <div class="field">
          <%= f.label :email, class: "ui form" %>
          <div class="ui left icon input"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
             <i class="lock icon"></i>
          </div>
          </div>
        </div>

        <div class="form-group row">
                <div class="field">
          <%= f.label :password, class: "ui form" %>
          <div class="ui left icon input"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
            <i class="lock icon"></i>
          </div>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "ui green submit button") %>
        </div>
       <% end %>
      </div>
     <div class="mb-3">
    </div>
   </div>
  </div>
 </div>
</div>